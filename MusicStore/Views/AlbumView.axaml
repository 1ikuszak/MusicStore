<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MusicStore.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MusicStore.Views.AlbumView"
             x:DataType="viewModels:AlbumViewModel">
    
    
    <StackPanel Spacing="5" Width="200">
        <Border CornerRadius="10" ClipToBounds="True">
            <Panel>
                <Image Source="{Binding Cover}"
                       Width="200" Stretch="Uniform"/>
            </Panel>
        </Border>
        <TextBlock HorizontalAlignment="Center" Text="{Binding Title}"/>
        <TextBlock HorizontalAlignment="Center" Text="{Binding Artist}"/>

    </StackPanel>
    
</UserControl>
